<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <!-- Form Types -->
        <service id="money.form.type.money" class="BabDev\MoneyBundle\Form\Type\MoneyType" public="false">
            <argument type="service" id="money.factory.formatter" />
            <argument type="service" id="money.factory.parser" />
            <argument>%babdev_money.default_currency%</argument>
            <tag name="form.type" />
        </service>
    </services>

</container>
