<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <!-- Factory Services -->
        <service id="money.factory.formatter" class="BabDev\MoneyBundle\Factory\FormatterFactory" public="false">
            <argument>%kernel.default_locale%</argument>
        </service>
        <service id="BabDev\MoneyBundle\Factory\FormatterFactoryInterface" alias="money.factory.formatter" />

        <service id="money.factory.parser" class="BabDev\MoneyBundle\Factory\ParserFactory" public="false">
            <argument>%kernel.default_locale%</argument>
        </service>
        <service id="BabDev\MoneyBundle\Factory\ParserFactoryInterface" alias="money.factory.parser" />
    </services>

</container>
