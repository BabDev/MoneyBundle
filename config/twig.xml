<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <!-- Twig Extension -->
        <service id="money.twig_extension" class="BabDev\MoneyBundle\Twig\MoneyExtension" public="false">
            <argument type="service" id="money.factory.formatter" />
            <argument>%babdev_money.default_currency%</argument>
            <tag name="twig.extension" />
        </service>
    </services>

</container>
