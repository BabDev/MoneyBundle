<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <!-- Validation Constraints -->
        <service id="money.validator.equal_to" class="BabDev\MoneyBundle\Validator\Constraints\MoneyEqualToValidator" public="false">
            <argument type="service" id="money.factory.formatter" />
            <argument type="service" id="money.factory.parser" />
            <argument>%babdev_money.default_currency%</argument>
            <argument type="service" id="property_accessor" on-invalid="ignore" />
            <tag name="validator.constraint_validator" alias="BabDev\MoneyBundle\Validator\Constraints\MoneyEqualToValidator" />
        </service>

        <service id="money.validator.greater_than" class="BabDev\MoneyBundle\Validator\Constraints\MoneyGreaterThanValidator" public="false">
            <argument type="service" id="money.factory.formatter" />
            <argument type="service" id="money.factory.parser" />
            <argument>%babdev_money.default_currency%</argument>
            <argument type="service" id="property_accessor" on-invalid="ignore" />
            <tag name="validator.constraint_validator" alias="BabDev\MoneyBundle\Validator\Constraints\MoneyGreaterThanValidator" />
        </service>

        <service id="money.validator.greater_than_or_equal" class="BabDev\MoneyBundle\Validator\Constraints\MoneyGreaterThanOrEqualValidator" public="false">
            <argument type="service" id="money.factory.formatter" />
            <argument type="service" id="money.factory.parser" />
            <argument>%babdev_money.default_currency%</argument>
            <argument type="service" id="property_accessor" on-invalid="ignore" />
            <tag name="validator.constraint_validator" alias="BabDev\MoneyBundle\Validator\Constraints\MoneyGreaterThanOrEqualValidator" />
        </service>

        <service id="money.validator.less_than" class="BabDev\MoneyBundle\Validator\Constraints\MoneyLessThanValidator" public="false">
            <argument type="service" id="money.factory.formatter" />
            <argument type="service" id="money.factory.parser" />
            <argument>%babdev_money.default_currency%</argument>
            <argument type="service" id="property_accessor" on-invalid="ignore" />
            <tag name="validator.constraint_validator" alias="BabDev\MoneyBundle\Validator\Constraints\MoneyLessThanValidator" />
        </service>

        <service id="money.validator.less_than_or_equal" class="BabDev\MoneyBundle\Validator\Constraints\MoneyLessThanOrEqualValidator" public="false">
            <argument type="service" id="money.factory.formatter" />
            <argument type="service" id="money.factory.parser" />
            <argument>%babdev_money.default_currency%</argument>
            <argument type="service" id="property_accessor" on-invalid="ignore" />
            <tag name="validator.constraint_validator" alias="BabDev\MoneyBundle\Validator\Constraints\MoneyLessThanOrEqualValidator" />
        </service>
    </services>
</container>
